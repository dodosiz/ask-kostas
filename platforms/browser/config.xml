<?xml version='1.0' encoding='utf-8'?>
<widget id="com.asvestopoulosprogramming.askkostas" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Ask Kostas</name>
    <description>Learn how to communicate during your holydays in Greece, Kostas will guide you.</description>
    <author email="asvestopouli@hotmail.com" href="http://asvestopoulos.weebly.com/">Asvestopoulos Theodosios</author>
    <content src="index.html" />
    <gap:plugin name="phonegap-admob" source="npm" />
    <icon src="./www/icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
